<h2>User Profile Page</h2>

<p>Username: <%= @user.username %> </p>
<p>Email: <%= @user.email %> </p>

<% if is_user? %>
  <p>
    <%= link_to "Update Info", edit_user_path %>
  </p>
<% end %>


<% if @user.questions %>
  <h2> Questions You've Asked: </h2>
  <ul>
    <% @user.questions.each do |question| %> 
    <li> <%= question.title %> </li>
    <% end %>
  </ul>
<% end %>


