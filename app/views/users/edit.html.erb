<% if is_user? %>
  <%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %><br />
  
    <%= f.label :password %>
    <%= f.password_field :password %><br />
  
    <%= f.submit("Update") %>
  <% end %>
<% else %>
  <p>
    You can only edit your own profile.
  </p>
<% end %>
